    .an {
        display: block;
        display: -webkit-box;
        height: 16px;
        font-size: 16px;
        line-height: 1.3;
        -webkit-line-clamp: 3; /* số dòng hiển thị */
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        margin-top: 10px;
    }
    .item-holder {
        @*background-color: #f0fbfc;*@
        margin-top: 0 !important;
        padding: 15px;
        border-bottom: 1px solid #06bbcc;
    }
    .an p {
        padding: 0!important;
    }
</style>
<section class="blog-section style-four">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="container bg-white">
                    <div class="row" style="margin-top: 50px">
                        <div class="col-lg-12 mt-1">
                            @foreach (var item in Model.Where(x => x.Status == true).Reverse())
                            {
                                <div class="item-holder row">
                                    <div class="image-box col-3">
                                        <figure>
                                            <a href="blog-details.html"><img style="height: 149px; object-fit: cover" loading="lazy" class="img-fluid" src="@item.Image" alt=""></a>
                                        </figure>
                                    </div>
                                    <div class="content-text col-9 pt-0" style="position:relative">                                      
                                        @Html.ActionLink(item.Title, "Details", "Posts", new { id = item.Id }, new { @class = "title-post", id = item.Id })
                                        <div class="an py-0 mb-1 an">
                                            @Html.Raw(item.Content)
                                        </div>
                                        <div>
                                            @*<img style="width: 40px;height: 40px; border-radius: 50%; object-fit: cover" src="@item.Account.Avatar">*@
                                            <span class="mr-1">@item.Account.FullName</span>-<span class="ml-1">@item.Specialization.Name</span>
                                        </div>
                                        <div class="dropdown" style="position:absolute; top: 0; right:0;">

                                            <!--Trigger-->

                                            <a id="dropdownMenu2" data-toggle="dropdown"
                                               aria-haspopup="true" aria-expanded="false"><i class="fas fa-ellipsis-v"></i></a>


                                            <!--Menu-->
                                            <div class="dropdown-menu dropdown-primary">
                                                @*<a class="dropdown-item" href="#"><i class="fab fa-apple-pay"></i>&nbsp;&nbsp;Pay</a>*@
                                                @Html.ActionLink("Edit", "Edit", "Posts", new { id = item.Id }, new { @class= "dropdown-item" })
                                                @Html.ActionLink("Details", "Details", "Posts", new { id = item.Id }, new { @class = "dropdown-item" })
                                                @Html.ActionLink("Delete", "Delete", "Posts", new { id = item.Id }, new { @class = "dropdown-item" })
                                            </div>
                                        </div>
                                    </div>
                                    
                                </div>
                            }
                            <div class="left-side">
                                <div class="styled-pagination">
                                    <ul>
                                        <li><a class="prev" href="blog.html"><span class="fas fa-angle-left" aria-hidden="true"></span></a></li>
                                        <li><a href="blog.html" class="active">1</a></li>
                                        <li><a href="blog.html">2</a></li>
                                        <li><a href="blog.html">3</a></li>
                                        <li><a class="next" href="blog.html"><span class="fas fa-angle-right" aria-hidden="true"></span></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
