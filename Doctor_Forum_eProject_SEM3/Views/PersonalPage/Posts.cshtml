@{
    ViewBag.Title = "Posts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    .title-post {
        font-size: 18px;
        color: black;
        font-weight: 500;
    }

        .title-post:hover {
            color: #06bbcc;
        }

