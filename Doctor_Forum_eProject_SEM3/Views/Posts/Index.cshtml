                        <div class="col-lg-12 wrapper mt-1">
                            @foreach (var item in Model.Where(x => x.Status == true && x.Account.Status == true).Reverse())
                            {
                                <div class="item-holder item row">
                                    <div class="image-box col-3">
                                        <figure>
                                            <a href="blog-details.html"><img style="height: 149px; object-fit: cover" loading="lazy" class="img-fluid" src="@item.Image" alt=""></a>
                                        </figure>
                                    </div>
                                    <div class="content-text col-9 pt-0" style="position:relative">
                                        @Html.ActionLink(item.Title, "Details", "Posts", new { id = item.Id }, new { @class = "title-post", id = item.Id })
                                        <div class="anen py-0">
                                            @Html.Raw(item.Content)
                                        </div>                                       
                                        <div>
                                            <img style="width: 40px;height: 40px; border-radius: 50%; object-fit: cover" src="@item.Account.Avatar">
                                            <span class="mr-1">@Html.ActionLink(item.Account.FullName, "UserProfile", "UserAccount", new { id = item.Account.Id }, new { @class = "text-dark link-profile" })</span>-<span class="ml-1">@*@item.Specialization.Name*@</span>    
