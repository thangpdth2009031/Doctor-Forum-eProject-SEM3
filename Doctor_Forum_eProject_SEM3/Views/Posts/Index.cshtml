<script>
    $(".wrapper .item").slice(5).hide();
    $('#pagination').pagination({

        // Total number of items present
        // in wrapper class
        items: 9,

        // Items allowed on a single page
        itemsOnPage: 5,
        onPageClick: function (noofele) {
            $(".wrapper .item").hide()
                .slice(5 * (noofele - 1),
                    5 + 5 * (noofele - 1)).show();
        }
    });
</script>