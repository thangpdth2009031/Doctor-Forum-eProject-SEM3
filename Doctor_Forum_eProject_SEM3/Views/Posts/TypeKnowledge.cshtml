@model Doctor_Forum_eProject_SEM3.Models.Post
<style>
    .link-new-post {
        font-size: 24px;
        font-weight: 500;
        color: #3a3a3a;
    }

        .link-new-post:hover {
            color: #398fef;
        }
    .click-knowledge {
        display: block;
        display: -webkit-box;
        height: 16px*1.3*3;
        font-size: 16px;
        line-height: 1.3;
        -webkit-line-clamp: 3; /* số dòng hiển thị */
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        margin-top: 10px;
    }
    .an-knowledge {
        display: block;
        display: -webkit-box;
        height: 16px*1.3*3;
        font-size: 16px;
        line-height: 1.3;
        -webkit-line-clamp: 6; /* số dòng hiển thị */
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>
<div class="col-4">
    <img style="height: 163px; width: 100%;object-fit: cover; border-bottom:  #b2b2b7 1px solid; border-radius: 10px 10px 0 0; margin: 10px 0 0 0" src="@Model.Image">
    <div style="background-color: #f7f7fa; padding: 0 10px">
        <span>@Model.Account.FullName</span>
        <h6>
            <a style="color: #343434" href="/Home/PostDetail/@Model.Id">
                <div class="click-knowledge">@Model.Title</div>
            </a>
        </h6>
        <div class="an-knowledge">@Html.Raw(Model.Content)</div>
    </div>
</div>

