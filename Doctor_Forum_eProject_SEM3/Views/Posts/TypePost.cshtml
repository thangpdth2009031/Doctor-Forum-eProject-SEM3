@model IEnumerable<Doctor_Forum_eProject_SEM3.Models.Post>
<style>
    .click {
        display: block;
        display: -webkit-box;
        height: 16px*1.3*3;
        font-size: 16px;
        line-height: 1.3;
        -webkit-line-clamp: 4; /* số dòng hiển thị */
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        margin-top: 10px;
    }
</style>
@foreach (var item in Model.Reverse().Take(3))
{
    <div class="col-4">
        <div>
            <img style="height: 163px; width: 100%; object-fit: cover; border-radius: 5px" src="@item.Image">
        </div>
        <div style="padding: 7px">
            <a style="color: #343434" href="#" class="d-block"><div class="click">@item.Account.FullName</div></a>
            <div class="click">@Html.Raw(item.Content)</div>
        </div>
    </div>
}

