@model IEnumerable<Doctor_Forum_eProject_SEM3.Models.Post>
<style>
    .click {
        display: block;
        display: -webkit-box;
        height: 16px*1.3*3;
        font-size: 16px;
        line-height: 1.3;
        -webkit-line-clamp: 4; /* số dòng hiển thị */
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        margin-top: 10px;
        font-size: 18px;
        color: black;
        font-weight: 500;
    }
    .usname:hover {
        color: #48bdc5;
    }
    .click {
        display: block;
        display: -webkit-box;
        height: 16px*1.3*3;
        font-size: 16px;
        line-height: 1.3;
        -webkit-line-clamp: 2; /* số dòng hiển thị */
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    .an-knowledge {
        display: block;
        display: -webkit-box;
        font-size: 16px;
        line-height: 1.3;
        -webkit-line-clamp: 5; /* số dòng hiển thị */
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>
@foreach (var item in Model.Take(3))
{
   
        <div class="col-4">
            <div>
                <a href="/Posts/Details/@item.Id">
                    <img style="height: 163px; width: 100%; object-fit: cover; border-radius: 5px" src="@item.Image">
                </a>
            </div>
            <div style="padding: 7px">
                <a style="color: #343434" href="/UserAccount/UserProfile/@item.Account.Id" class="d-block"><div class="usname">@item.Account.FullName</div></a>
                <a style="color: #343434" href="/Posts/Details/@item.Id">
                    <div class="click">@Html.Raw(item.Title)</div>
                </a>
                <a style="color: #343434" href="/Posts/Details/@item.Id">
                    <div class="an-knowledge mt-2">@Html.Raw(item.Content)</div>
                </a>
            </div>
        </div>
   
}

