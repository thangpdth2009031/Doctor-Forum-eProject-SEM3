@model IEnumerable<Doctor_Forum_eProject_SEM3.Models.Account>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section Scripts {
    <script src="~/Content/js/admin/userController.js"></script>
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" style="margin-left: 300px">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Specialization.Name)
        </th>
        @*
            <th>
                @Html.DisplayNameFor(model => model.RoleId)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Avatar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        @*
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        @*   <th>
                @Html.DisplayNameFor(model => model.AddressDetail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DistrictId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProvinceId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedAt)
            </th>*@
        <th>
            Status
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Specialization.Name)
            </td>
            @*
                <td>
                    @Html.DisplayFor(modelItem => item.RoleId)
                </td>*@
            <td>
                <img style="width:30px; height:30px; object-fit:cover" src="@Html.DisplayFor(modelItem => item.Avatar)" alt="Alternate Text" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.AddressDetail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DistrictId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProvinceId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedAt)
                </td>*@

            <td>
                <a href="#" class="btn-active" data-id="@item.Id">
                    @Html.Raw(item.Status ? "<strong>Approved</strong>" : "<strong>Not approved yet</strong>")
                </a>
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
