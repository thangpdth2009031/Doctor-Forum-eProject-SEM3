@model Doctor_Forum_eProject_SEM3.Models.Post

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    
}

<div class="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h2>@Html.DisplayFor(model => model.Title)</h2>
                        <span>
                            By @Html.DisplayFor(model => model.Account.FullName) / @Html.DisplayFor(m => m.CreatedAt, "{0:dd/MM/yyyy}", new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                        </span>
                       @* <h5>
                            @Html.DisplayFor(m => m.CreatedAt, "{0:dd/MM/yyyy}",
                new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                        </h5>*@
                        <div>
                            @MvcHtmlString.Create(HttpUtility.HtmlDecode(Model.Content))
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<p style="margin-left:300px">
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
